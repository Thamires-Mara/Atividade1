<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|center_vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kroton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qual_o_seu_curso"/>

        <EditText
            android:id="@+id/dt_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/digite_aqui"/>

        <TextView
            android:id="@+id/tx_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_curso"/>

        <Button
            android:id="@+id/btn_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirmar_curso"/>
    </LinearLayout>

</ScrollView>